@model IEnumerable<DiShop.Models.Vehicle>

@{
    ViewBag.Title = "Cart";
}

<h2>Cart</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BuyCount)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.BuyCount <= 0)
        {
            continue;
        }
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BuyCount)
        </td>
        <td>
            @Html.ActionLink("Remove", "Remove", new { id=item.Id }) |
            @Html.ActionLink("Remove All", "RemoveAll", new { id=item.Id })
        </td>
    </tr>
}

</table>
